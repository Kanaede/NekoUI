          "bindings": [
            {
              "binding_name": "#gui_scale_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "fullscreen_toggle@settings_common.option_toggle": {
          "$show_fullscreen_toggle|default": true,
          "visible": "($show_fullscreen_toggle and not $is_holographic)",
